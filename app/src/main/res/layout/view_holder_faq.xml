<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:layout_marginLeft="10dp"
    android:padding="5dp">

    <TextView
        android:id="@+id/faq_text_question"
        android:textColor="#202124"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:gravity="center_vertical"
        android:layout_toStartOf="@+id/arrow_down"
        android:text="Loading Text" />

    <ImageButton
        android:id="@+id/arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:animateLayoutChanges="true"
        android:background="#00ffffff"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/vector_arrow_down" />

    <TextView
        android:id="@+id/faq_text_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/faq_text_question"
        android:text="Loding Answers"
        android:textColor="#3C4054"
        android:textSize="16sp"
        android:animateLayoutChanges="true"
        android:justificationMode="inter_word"
        android:paddingRight="7sp"
        android:visibility="gone"
        android:paddingVertical="5sp"
        android:paddingHorizontal="7sp"
        android:background="@drawable/faq_answer_background"
        android:layout_marginRight="15sp"
        />

</RelativeLayout>