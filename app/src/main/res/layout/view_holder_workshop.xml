<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:elevation="25dp"
        android:outlineAmbientShadowColor="#000000"
        android:outlineSpotShadowColor="#000000"
        app:cardCornerRadius="10dp"

        >


        <RelativeLayout
            android:id="@+id/workshop_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fbf9e0"


            >

            <ImageView
                android:id="@+id/workshop_image_view"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"


                />

            <TextView
                android:id="@+id/workshop_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/workshop_image_view"
                android:layout_centerHorizontal="true"
                android:padding="10sp"
                android:text="title"
                android:textColor="#000000"
                android:textSize="25sp"


                />

            <Button
                android:id="@+id/workshop_remainder"
                android:layout_width="135sp"
                android:layout_height="30sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:background="@drawable/button_background"
                android:drawableEnd="@drawable/vector_notifications_none"
                android:paddingLeft="10sp"
                android:paddingRight="10sp"
                android:text="Remind Me"
                android:textAllCaps="false"
                android:textColor="#ffffff"


                />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>