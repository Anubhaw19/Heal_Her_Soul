<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntroPage">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee"
        android:text="TIME TO HEAL HER SOUL"
        android:textColor="@color/willYellow"
        android:id="@+id/introText"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

<com.synnapps.carouselview.CarouselView
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="400dp"
    app:fillColor="#FFFFFFFF"
    app:pageColor="#00000000"
    android:layout_below="@id/introText"
    android:layout_centerHorizontal="true"
    app:radius="6dp"
    android:id="@+id/carouselView"
    app:slideInterval="3000"
    app:strokeColor="#FF777777"
    app:strokeWidth="1dp"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:layout_below="@id/carouselView">


       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="WE ARE SCIENTISTS, EDUCATORS, HEALERS,\n AND COUNSELLORS."
           android:textAlignment="center"
           android:textSize="20sp"
           android:id="@+id/littleText"
           android:textColor="#fff"/>
       <Button
           android:layout_width="250dp"
           android:layout_height="50dp"
           android:layout_below="@id/littleText"
           android:layout_marginTop="10dp"
           android:id="@+id/nextHomeBtn"
           android:layout_centerHorizontal="true"
           android:background="@color/willYellow"
           android:textColor="@color/colorPrimaryDark"
           android:text="Next"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@id/nextHomeBtn">
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/socialtype"
        android:textColor="@color/downloadProgress"
        android:text="Facebook"/>
    </LinearLayout>
</LinearLayout>
   </RelativeLayout>

</RelativeLayout>
</ScrollView>